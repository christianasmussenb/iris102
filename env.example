# IRIS102 Demo - Environment Variables Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# IRIS Configuration
# =============================================================================
# IRIS System password (default: SYS)
ISC_PASSWORD=SYS

# File system paths (mounted in Docker)
IN_DIR=/data/IN
OUT_DIR=/data/OUT
LOG_DIR=/data/LOG

# =============================================================================
# MySQL Configuration (Local Docker Container)
# =============================================================================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DB=demo
MYSQL_USER=demo
MYSQL_PASSWORD=demo_pass
MYSQL_ROOT_PASSWORD=root_pass

# =============================================================================
# PostgreSQL Configuration (External Service)
# =============================================================================
# For external PostgreSQL (AWS RDS, GCP Cloud SQL, Azure Database, etc.)
# Uncomment and fill with your external PostgreSQL credentials

# Example for AWS RDS
# PG_HOST=mydb.abc123.us-east-1.rds.amazonaws.com
# PG_PORT=5432
# PG_DB=mydatabase
# PG_USER=myuser
# PG_PASSWORD=mypassword
# PG_SSLMODE=require

# Example for GCP Cloud SQL
# PG_HOST=10.1.2.3
# PG_PORT=5432
# PG_DB=mydatabase
# PG_USER=myuser
# PG_PASSWORD=mypassword
# PG_SSLMODE=require

# Example for Azure Database for PostgreSQL
# PG_HOST=myserver.postgres.database.azure.com
# PG_PORT=5432
# PG_DB=mydatabase
# PG_USER=myuser@myserver
# PG_PASSWORD=mypassword
# PG_SSLMODE=require

# For local testing with Docker PostgreSQL (uncomment if using local)
PG_HOST=postgres
PG_PORT=5432
PG_DB=demo
PG_USER=demo
PG_PASSWORD=demo_pass
PG_SSLMODE=disable

# =============================================================================
# Application Configuration
# =============================================================================
# File processing settings
FILE_POLL_INTERVAL=5
FILE_ACCESS_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_BASE=0.5

# Logging settings
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# =============================================================================
# Docker Configuration
# =============================================================================
# Port mappings (adjust if ports are already in use)
IRIS_WEB_PORT=52773
IRIS_SUPER_PORT=1972
MYSQL_PORT_EXTERNAL=3306
POSTGRES_PORT_EXTERNAL=5432
ADMINER_PORT=8080

# =============================================================================
# Security Settings
# =============================================================================
# Hash algorithm for file duplicate detection
HASH_ALGORITHM=SHA256

# Database connection timeout (seconds)
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=60

# =============================================================================
# Development Settings
# =============================================================================
# Set to true for additional debug logging
DEBUG_MODE=false

# Set to true to keep processed files in IN directory (for testing)
KEEP_SOURCE_FILES=false

# Set to true to enable SQL query logging
LOG_SQL_QUERIES=false