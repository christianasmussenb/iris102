// Validation script for Sprint 2 classes
// This script can be copied and pasted into IRIS terminal

// Test 1: Check if namespace DEMO exists
zn "%SYS"
if ##class(Config.Namespaces).Exists("DEMO") {
    write "✓ DEMO namespace exists",!
} else {
    write "✗ DEMO namespace missing",!
}

// Test 2: Switch to DEMO and check basic functionality
zn "DEMO"
write "Current namespace: ", $NAMESPACE,!

// Test 3: Check if we can create a simple class
set testClass = "Test.Demo"
if ##class(%Dictionary.ClassDefinition).%ExistsId(testClass) {
    write "✓ Basic class creation works",!
} else {
    write "- Creating test class...",!
    set classDef = ##class(%Dictionary.ClassDefinition).%New()
    set classDef.Name = testClass
    set status = classDef.%Save()
    if $$$ISOK(status) {
        write "✓ Class creation successful",!
    } else {
        write "✗ Class creation failed",!
        do $System.Status.DisplayError(status)
    }
}

// Test 4: Test simple logging capability
try {
    write "Testing basic logging...",!
    // Simple log test without our custom classes
    write "✓ Basic IRIS functionality working",!
} catch ex {
    write "✗ Error in basic test: ", ex.DisplayString(),!
}

quit